<configuration>

  <!-- Logger: -->
  <logfile>/home/log/stimg.log</logfile>
  <loglevel>5</loglevel>
  <logsize>2000000</logsize>
  <logmult>SINGLEFILE</logmult>
  
  <!-- Signal Exposure Times -->
  <signal_sec>0</signal_sec>                      <!--            s -->
  <signal_usec>100000</signal_usec>               <!--           us -->
  
  <!-- Scheduler Times -->
  <capture_duration>30</capture_duration>         <!--            s -->
  <sleep_duration>600</sleep_duration>            <!--            s -->
  
  <!-- Sleep Times: -->
  <command_sleep>30000</command_sleep>            <!--           us -->
  <monitor_sleep>1000000</monitor_sleep>          <!--           us -->
  <scheduler_sleep>1000000</scheduler_sleep>
  
  <!-- Digitizer Data: -->
  <dig_DCF0>/home/conf/Rev3_LG.dcf</dig_DCF0>
  <dig_num0>0</dig_num0>
  <dig_DCF1>/home/conf/Rev3_HG.dcf</dig_DCF1>
  <dig_num1>1</dig_num1>
  <dig_mode>2</dig_mode>                          <!-- 0 = use dig 0, 1 = use dig 1, 2 = use both dig -->
  <xpix_size>2592</xpix_size>                     <!--       pixels -->
  <ypix_size>2192</ypix_size>                     <!--       pixels -->
  
  <!-- Output Data to File: -->
  <file_dir0>/data1/img</file_dir0>  		     <!--     dir path -->
  <file_dir1>/data/img</file_dir1>  		     <!--     dir path -->
  <file_str>img</file_str>                        <!--  file prefix -->
  
  <documentation>
  <!--  
  
  Logger:
  logfile:        Full path of where to store file
  loglevel:       0-5: 5=all information, 0=fatal errors only
  logsize:        size of logfile in bytes
  logmult:        singlefile or multifile logs
  
  Sleep Times:    for each thread in microseconds
  
  -->
  </documentation>
  
</configuration>
